<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_image_min_height"
    tools:context=".view.activity.GaleryActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_margin_default">


        <ImageView
            android:id="@+id/card_image_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_crop_original_black" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorBagroundImageFavorite">

            <TextView
                android:id="@+id/card_item_text"
                style="@style/CardViewTitleBotton.Text.White"
                android:layout_width="@dimen/card_image_title_text_width"
                android:layout_height="wrap_content"
                android:text="111" />

            <ImageView
                android:id="@+id/cart_item_favorite"
                style="@style/CardViewTitleBotton.Favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_favorite_border_white" />

        </FrameLayout>


    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>
